<!-- slide section star -->
<section class="container container-custom">
  <div class="row my-2">
    <img src="/img/slider.jpg" class="slide-img">
  </div>
</section>
<!-- main seciton star -->
<section class="container container-custom">
  <!-- subheading -->
  <% cats.forEach(cat => { %>
  <div class="sub-head mb-3">
    <div class="name">
      <img src="/upload/<%= cat.logo %>" class="small-logo"> <%= cat.name %>
    </div>
    <div class="text-right">
      <a href="/" class="btn btn-sm btn-outline-light">Go Home</a>
      <a href="check.html" class="btn btn-sm btn-fb">facebook</a>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="alert-success p-1 mb-3"><p><%= cat.note %></p></div>
      <table class="table text-light">
        <thead>
          <tr>
            <th scope="col">Product</th>
            <th scope="col">Price</th>
          </tr>
        </thead>
        <tbody id="tbl">
          <% pros.forEach(pro => { %>
            <tr class="coll ">
              <td><%= pro.name %></td>
              <td><%= pro.price %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <div class="col-md-6 fbox-flex">
      <form method="post">
        <div class="form-group">
          <label for="price">Price</label>
          <input type="text" name="price" id="price" class="form-control">
        </div>
        <input type="text" name="product" id="product" class="sr-only">
        <div class="form-group">
          <label for="product"><%= cat.finput %></label>
          <input type="text" name="pid" id="pid" class="form-control">
        </div>
        <input type="submit" value="Confirm" class="btn btn-success full-width">
      </form>
    </div>
  </div>
  <% }) %>
  <hr>
  <p class="text-center my-4"> <a href="#" class="service-text">Customer Care</a></p>
  <hr>
</section>